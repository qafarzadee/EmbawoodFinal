@model List<ProductDto> 



@if (Model.Count() > 0)
{
    <section class="section">
    <div class="bashlig">
    @foreach (var item in Model)
     {
         <h2>@item.CategoryName</h2>
         break;
     }
</div>
    <div class="section2">
        <div class="container">
          @{
              foreach (var item in Model)
                {
                   
                    <div class="items">
           <a asp-action="ProductDetail" asp-controller="Product" asp-route-id="@item.Id">
            <img id="yeniphoto" src="~/MemberPanel/images/Yeni.png" alt="">
            <img id="mainphoto"
              src="~/AdminPanel/img/product/@item.Image"
              alt=""
            />
           </a>
            <div class="items_bottom">
              <div class="items_title">
              <a asp-action="ProductDetail" asp-controller="Product" asp-route-id="@item.Id">
              <h5>@item.Name</h5>
              </a>
                <p>@item.Price AZN</p>
              </div>
              <div class="items_icons">
                <a asp-action="BasketAdd" asp-controller="Home" asp-route-id="@item.Id">
                          <i class="fa-solid fa-cart-plus"></i>
                          </a>
                          <a asp-action="Favorite" asp-controller="Home" asp-route-id="@item.Id">
                          <i class="fa-solid fa-heart"></i>
                          </a>
              </div>
            </div>
          </div>
                }
          }
          
        </div>
      </div>
      
    </section>
}else
{
    <section class="page_404">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 ">
                    <div class="col-sm-10 col-sm-offset-1  text-center">
                        <div class="four_zero_four_bg">
                            <h1 class="text-center ">Bu kateqoriyada məhsul yoxdur</h1>

                        </div>

                        <div class="contant_box_404">
                            <h3 class="h2">
                                Görünüşə görə səhv kateqoriyadasınız
                            </h3>

                            <p>bu kateqoriyaya məhsul əlavə olunmayıb!</p>

                            <a asp-action="Index" asp-controller="Home" style="text-decoration:none" class="link_404">Ana səhifəyə qayıt</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <style>
            /*======================
                404 page
            =======================*/

            .page_404 {
                padding: 40px 0;
                background: #fff;
                font-family: "Arvo", serif;
            }

                .page_404 img {
                    width: 100%;
                }

            .four_zero_four_bg {
                background-image: url(https://cdn.dribbble.com/users/285475/screenshots/2083086/dribbble_1.gif);
                background-repeat: no-repeat;
                height: 400px;
                background-position: center;
                display:flex;
                justify-content: center;
            }

                .four_zero_four_bg h1 {
                    font-size: 40px;
                }

                .four_zero_four_bg h3 {
                    font-size: 80px;
                }

            .link_404 {
                color: #fff !important;
                padding: 10px 20px;
                background: #39ac31;
                margin: 20px 0;
                display: inline-block;
            }

            .contant_box_404 {
                margin-top: -50px;
                display: flex;
                flex-direction:column;
                align-items:center;
                justify-content: center;
            }
            .col-sm-12{
                display: flex;
                justify-content: center;
            }
        </style>
    </section>
}

          